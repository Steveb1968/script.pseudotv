            </control>
            <control type="image">
                <left>15</left>
                <top>3</top>
                <width>260</width>
                <height>35</height>
                <texture>NavFlagInfo.png</texture>
                <aspectratio align="left">keep</aspectratio>
                <colordiffuse>lightgrey</colordiffuse>
            </control>
			<control type="label">
