    </coordinates>
    <controls>
        <control type="group" id="102">
            <animation effect="fade" start="0" end="100" time="300" condition="Control.IsVisible(102)">Conditional</animation>
            <visible>!Window.IsActive(VideoOSD)</visible>
			<!--HEADER-->
            <control type="image">
                <left>0</left>
                <top>-40</top>
